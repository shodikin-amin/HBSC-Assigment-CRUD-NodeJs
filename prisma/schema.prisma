generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  name     String
  email    String     @unique
  password String
  role     String     @default("USER")
  Employee Employee[]
}

model Employee {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  position    String
  email       String   @unique
  phoneNumber String?
  hiredDate   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}
